# Environment variables for Vercel deployment
# Copy this file to .env.local for local development

# Database Configuration
# For production, use a PostgreSQL database URL (e.g., from Supabase, Neon, or Railway)
DATABASE_URL="postgresql://user:password@host:port/database?sslmode=require"

# NextAuth Configuration
# For production, set NEXTAUTH_URL to your Vercel domain
NEXTAUTH_URL="https://your-app.vercel.app"
NEXTAUTH_SECRET="generate-a-random-secret-key-here"

# Google OAuth (Optional)
# Get these from https://console.cloud.google.com/
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# Application Configuration
NEXT_PUBLIC_APP_NAME="PropertyFinder"
NEXT_PUBLIC_APP_URL="https://your-app.vercel.app"
NEXT_PUBLIC_APP_DESCRIPTION="Find Your Dream Home Today"

# Feature Flags
NEXT_PUBLIC_ENABLE_BLOG="true"
NEXT_PUBLIC_ENABLE_AGENTS="true"
NEXT_PUBLIC_ENABLE_MAP="true"

# Locale Configuration
NEXT_PUBLIC_DEFAULT_LOCALE="en"
NEXT_PUBLIC_SUPPORTED_LOCALES="en,uk,cs"

# Contact Information
NEXT_PUBLIC_CONTACT_EMAIL="info@propertyfinder.com"
NEXT_PUBLIC_CONTACT_PHONE="+1 (555) 123-4567"
NEXT_PUBLIC_COMPANY_ADDRESS="123 Real Estate St, New York, NY 10001"